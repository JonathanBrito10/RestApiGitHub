<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_marginTop="@dimen/margens"
    android:layout_marginLeft="@dimen/margens"
    android:layout_marginRight="@dimen/margens"
    android:clickable="true"
    android:focusable="true"
    android:elevation="60dp"
    android:foreground="?android:attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:id="@+id/foto"
            android:layout_marginLeft="@dimen/margens20"
            android:layout_marginTop="@dimen/margens"
            android:scaleType="fitXY"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nome"
            android:id="@+id/titulo"
            android:layout_toRightOf="@id/foto"
            android:layout_marginLeft="@dimen/margens20"
            android:layout_marginTop="@dimen/margens20"
            android:textAppearance="?android:textAppearanceLarge"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/gitLink"
            android:layout_width="243dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/titulo"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="12dp"
            android:layout_toRightOf="@id/foto"
            android:text="link"
            android:textAppearance="?android:textAppearanceLarge"
            android:textSize="15dp"
            android:textStyle="bold"
            android:visibility="visible" />


    </RelativeLayout>

</androidx.cardview.widget.CardView>